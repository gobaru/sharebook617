<%= form_with model: @book, local: true do |f|%>
  <div class="field">
    <%= f.label :title, "本のタイトル" %><br />
    <%= f.text_field :title, id:"book_title" %>
  </div>

  <div class="field">
    <%= f.label :author, "著者" %><br />
    <%= f.text_field :author, class: :form__text, id:"book_author" %>
  </div>

  <div class="field">
    <%= f.label :publisher, "出版社" %><br />
    <%= f.text_field :publisher, class: :form__text, id:"book_publisher" %>
  </div>

  <div class="field">
    <%= f.label :price, "料金" %><br />
    <%= f.text_field :price, class: :form__text, id:"book_price" %>
  </div>

  <div class="field">
    <%= f.label :genre, "ジャンル" %><br />
    <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"genre-select"}) %>
  </div>

  <div class="field">
    <%= f.label :image, "本の画像" %><br />
    <%= f.file_field :image, id:"book_image" %>
  </div>

  <div class="actions">
    <%= f.submit "投稿する", class: :form__btn  %>
  </div>
<% end %>